{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend/run.py",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}" //Çok önemli

            },
            "args": [
                "run",
                "--no-debugger",
                "--port",
                "8080"
            ],
            "jinja": true,
            "justMyCode": false
        }
    ]
}